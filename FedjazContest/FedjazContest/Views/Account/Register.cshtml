@model RegistrationModel

<div class="about">
    <h3 class="display-3 text-center">Create Account</h3>
    <form method="post" asp-controller="Account" asp-action="Register" enctype="multipart/form-data">
        <div class="row justify-content-md-center">
            <div class="col-4">
                <label asp-for="FirstName">First name</label>
                <input type="text" class="form-control" asp-for="FirstName">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-4">
                <label asp-for="LastName">Last name</label>
                <input type="text" class="form-control" asp-for="LastName">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-md-center mt-3">
            <div class="col-4">
                <label asp-for="Username">Username</label>
                <input type="text" class="form-control" asp-for="Username">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="col-4">
                <label asp-for="Email">Email</label>
                <input type="text" class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-md-center mt-3">
            <div class="col-4">
                <label asp-for="Password">Password</label>
                <input type="password" class="form-control" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-4">
                <label asp-for="PasswordConfirm">Confirm Password</label>
                <input type="password" class="form-control" asp-for="PasswordConfirm">
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-md-center mt-3">
            <div class="col-8">
                <label asp-for="Avatar">Avatar</label>
                <input type="file" class="form-control" asp-for="Avatar">
            </div>
        </div>
        <div class="d-flex justify-content-end mt-3" style="margin-right: 16vh;">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </form>
</div>