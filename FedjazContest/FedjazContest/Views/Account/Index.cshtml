@using FedjazContest.Entities
@model ApplicationUser

@if(Model != null)
{
    <div class="rectangle"></div>
    <div class="profile">
        <div class="row">
            <div class="col-4">
                <img src="@Url.Action("GetAvatar", "Account", new { Username = Model.UserName})" class="avatar-big"/>
            </div>
            <div class="col-4 offset-4">
                <h5>Community activity:</h5>
                <span>Rating: 100</span>
                <br />
                <span>Points: 100</span>
                <br />
                <span>Tasks solved: 100</span>
                <br />
                <span>Blog posts: 100</span>
            </div>
        </div>
        <h1 class="mt-3">@($"{Model.FirstName} {Model.LastName}")</h1>
        <h3 class="text-muted">@Model.UserName</h3>
    </div>    
}
