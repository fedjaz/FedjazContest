@model LoginModel

<div class="forms">
    <h5 class="display-5 text-center">Sign In to your Account</h5>
    <form method="post" asp-controller="Account" asp-action="Login" enctype="multipart/form-data">
        <div class="row justify-content-md-center">
            <div class="col-4">
                <label asp-for="EmailOrUsername">Email or Username</label>
                <input type="text" class="form-control" asp-for="EmailOrUsername">
                <span asp-validation-for="EmailOrUsername" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-md-center mt-3">
            <div class="col-4">
                <label asp-for="Password">Password</label>
                <input type="password" class="form-control" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <p class="text-muted text-center mt-2">Forgot your password? <a asp-action="RestorePassword">Restore</a></p>
        <p class="text-muted text-center mt-2">Don't have Account? <a asp-action="Register">Register</a></p>
        <div class="d-flex justify-content-end mt-3" style="margin-right: 32vh;">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>
</div>