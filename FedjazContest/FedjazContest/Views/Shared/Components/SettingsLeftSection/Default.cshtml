@using FedjazContest.Models
@model List<SettingsLeftSectionModel> 

@if(Model != null)
{
    <div class="settings-section">
        <h3>Settings</h3>
        <div class="list-group">
            @foreach(SettingsLeftSectionModel section in Model)
            {
                <a class="list-group-item list-group-item-action @(section.IsActive ? "active" : "")" 
                    asp-controller="Account" 
                    asp-action="Settings" 
                    asp-route-section="@(section.SectionName)">
                        @(section.Title)
                    </a>
            }
        </div>
    </div>
}